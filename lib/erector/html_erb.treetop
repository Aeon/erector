grammar HtmlErb
  rule doc
    space node space x:doc? {
      def convert
        if x.empty?
          node.convert
        else
          node.convert + x.convert
        end
      end
    }    
  end

  rule node
    printlet / scriptlet / self_closing_tag / closetag / opentag / text
  end

  rule scriptlet
    #todo: match non-greedily so we can have %s inside the scriptlet
    '<%' space code:[^%]* space '%>' {
      def convert
        code.text_value.strip + "\n"
      end
    }
  end

  rule printlet
    #todo: match non-greedily so we can have %s inside the scriptlet
    '<%=' space code:[^%]* space '%>' {
      def convert
        "text #{code.text_value.strip}\n"
      end
    }
end

  rule tagname
    [A-Za-z0-9_]+
  end

  rule self_closing_tag
    '<' tag_name:tagname space '/>' {
      def convert
        "#{tag_name.text_value}\n"
      end
    }
  end

  rule opentag
   '<' tag_name:tagname '>' {
      def convert
        "#{tag_name.text_value} do\n"
      end
    }
  end

  rule closetag
   '</' tag_name:tagname '>' {
      def convert
        "end\n"
      end
    }
  end

  rule text
    [^<>]+ {
      def convert
        stripped = text_value.strip
        if stripped.blank?
          ""
        else
          "text '#{text_value.strip}'\n"
        end
      end
    }
  end

  rule space
    ' '* {
      def convert
        ""
      end
    }
  end

end
